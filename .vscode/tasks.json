// .vscode/tasks.json
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Generate Build Info",
            "type": "shell",
            // Führt BEIDE Befehle nacheinander aus: erst aufräumen, dann generieren.
            "command": "flutter clean; dart run build_runner build --delete-conflicting-outputs",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        }
    ]
}
